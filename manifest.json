{
	"manifest_version": 2,
	"name": "ESO TwitchDrops",
	"description": "Check Twitch Drops for 'Elder Scrolls Online'.",
	"version": "1.0.2",
	"icons": {
		"96": "images/treasure-chest96.png"
	},
	"homepage_url": "https://github.com/Offerel/ESO-TwitchDrops-Extension",
	"background": {
		"scripts": ["scripts/background.js"]
	},
	"browser_action": {
		"browser_style": true,
		"default_icon": "images/treasure-chest96.png",
		"default_title": "ESO TwitchDrops",
		"default_popup": "scripts/popup.html"
	},
	"permissions": [
		"https://eso-hub.com/*",
		"storage",
		"notifications"
		]
}